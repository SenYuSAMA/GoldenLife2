<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px140"
        android:background="@color/colorDarkBG"
        >
    <TextView
        android:id="@+id/title_tv"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资讯"
        android:textColor="#fff"
        android:textSize="@dimen/px60"
        />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px166"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkBG"
        app:tabSelectedTextColor="@color/colorTextBlue"
        app:tabTextColor="@color/colorTextGrey"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/colorDarkBG"
        >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/rl_tv"
        android:layout_above="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>